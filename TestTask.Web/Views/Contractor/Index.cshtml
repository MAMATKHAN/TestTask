@using TestTask.Web.Models.Contractors
@model IndexViewModel

@{
    ViewData["Title"] = "Contractors";
}

<div class="container mt-2">
        
    <h2>Contractors</h2>
    <table class="table table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Name</th>
                <th>Created At</th>
                <th>Updated At</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var contactor in Model.Contractors)
            {
                <tr>
                    <td>@contactor.Name</td>
                    <td>@contactor.CreatedAt</td>
                    <td>@contactor.UpdatedAt</td>
                </tr>
            }
        </tbody>
    </table>
</div>

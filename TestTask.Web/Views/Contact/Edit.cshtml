@using TestTask.Web.Models.Contacts
@model EditContactViewModel
@{
    ViewData["Title"] = "Edit Contact";
}

<div class="container mt-4">
    <h2>Edit Contact</h2>
    <form asp-action="Edit" method="post">
        <input asp-for="Contact.ContactId" type="hidden"/>
        <div class="form-group">
            <label asp-for="Contact.FullName">Full name</label>
            <input asp-for="Contact.FullName" class="form-control" />
            <span asp-validation-for="Contact.FullName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Contact.Email">Email</label>
            <input asp-for="Contact.Email" class="form-control" />
            <span asp-validation-for="Contact.Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Contact.ContractorId">Counterparty</label>
            <select asp-for="Contact.ContractorId" class="form-control">
                @foreach (var contractor in Model.Contractors)
                {
                    @if(contractor.Id == Model.Contact.ContractorId)
                    {
                        <option selected value="@contractor.Id">@contractor.Name</option>
                    }
                    else
                    {
                        <option value="@contractor.Id">@contractor.Name</option>
                    }
                }
            </select>
        </div>
        <div class="my-1">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-action="Index" asp-controller="Contact" class="btn btn-secondary">Cancel</a>
        </div>
        
    </form>
</div>
